@model CRUZ_AZUL_AGENDA.Models.AgendamentoViewModel

@{ ViewBag.Title = " Novo Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<section class="content-header">
    <h1>
        Novo Agendamento
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"> Novo Agendamento</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Novo Agendamento</h3>
                </div>

                @using (Html.BeginForm("NovoAgendamento", "Home", FormMethod.Post))
                {
            <div class="box-body">
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.agendamento.Data, new { htmlAttributes = new { @class = "form-control", placeholder = "00/00/0000", data_tipo = "data" } })
                    @Html.ValidationMessageFor(model => model.agendamento.Data, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.agendamento.Horario, new { htmlAttributes = new { @class = "form-control", placeholder = "Horario" } })
                    @Html.ValidationMessageFor(model => model.agendamento.Horario, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @Html.DropDownListFor(model => model.agendamento.IdPaciente, new SelectList(Model.pacientes, "Id", "Nome"), new { @class = "form-control" })
                </div>
                <div class="form-group has-feedback">
                    @Html.DropDownListFor(model => model.agendamento.IdMedico, new SelectList(Model.medicos, "Id", "Nome"), new { @class = "form-control" })
                </div>
            </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>}
            </div>
        </div>

    </div>

</section>


